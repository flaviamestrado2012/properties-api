<h2>Profiles</h2>

<hr />

<%= link_to "New Profile", new_profile_path, :class => 'btn btn-primary' %>

<br /><br />

<% if @profiles.any? %>
    <table class="table table-striped">
        <tr>            
            <th>Name</th>
            <th>Description</th>
            <th colspan="3">Options</th>
        </tr>
    
        <% @profiles.each do |profile| %>
            <tr>                
                <td><%= profile.name %></td>
                <td><%= profile.description %></td>
                <td><%= link_to '', profile_path(profile), :class => 'icon-eye-open' %></td>
                <td><%= link_to '', edit_profile_path(profile), :class => 'icon-pencil' %></td>
                <td><%= link_to '', profile, :method => :delete, 
                        :data => { :confirm => "Are you sure you want to delete this profile?" }, :class => 'icon-remove' %></td>

            </tr>
        <% end %>
    
    </table>
<% else %>
    <p>There are no profiles yet.</p>
<% end %>
