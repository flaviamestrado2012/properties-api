<h2>Item</h2>

<p>Name: <%= 	@item.name %></p>
<p>Description: <%= @item.description %></p>

<%= link_to "Edit Item", edit_item_path(@item), :class => 'btn btn-primary' %>
<%= link_to "Delete Item", @item, 
    :method => :delete, :class => 'btn btn-danger', :data => { :confirm => 'Are you sure you want to delete this item?'} %>
