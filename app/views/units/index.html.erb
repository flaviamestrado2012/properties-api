<h2>Units</h2>

<hr />

<%= link_to "New Unit", new_unit_path, :class => 'btn btn-primary' %>

<br /><br />

<% if @units.any? %>
    <table class="table table-striped">
        <tr>            
            <th>Name</th>
            <th colspan="3">Options</th>            
        </tr>
    
        <% @units.each do |unit| %>
            <tr>                
                <td><%= unit.name %></td>
                <td><%= link_to '', unit_path(unit), :class => 'icon-eye-open' %></td>
                <td><%= link_to '', edit_unit_path(unit), :class => 'icon-pencil' %></td>
                <td><%= link_to '', unit, :method => :delete, 
                        :data => { :confirm => "Are you sure you want to delete this unit?" }, :class => 'icon-remove' %></td>

            </tr>
        <% end %>
    
    </table>
<% else %>
    <p>There are no units yet.</p>
<% end %>
